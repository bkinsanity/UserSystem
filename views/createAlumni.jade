extends layout

block content
	form(method='post', action='/alumnis/create' )
		.form-group
		label Name
		input.form-control(name='name', type='text', placeholder='Enter Name')
		.form-group
		label Email
		input.form-control(name='email', type='email', placeholder='Enter Email')
		.form-group
		label Department
		input.form-control(name='department', type='text', placeholder='Enter the department you study')
		.form-group
		label Graduate Year
		input.form-control(name='graduate_year', type='text', placeholder='Enter which year you graduated')
		.form-group
		label Phone Number
		input.form-control(name='phone_number', type='text', placeholder='Enter your phone number')
		h1
			input(type='submit', value='Create New Alumni').btn.btn-primary.btn-lg
			a(href='/alumnis').btn.btn-default.btn-lg Back